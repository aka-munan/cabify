<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurface">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/arrow_back"
            app:navigationIconTint="@color/colorSecondary"
            app:title="Register as driver" />

    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:layout_marginTop="?attr/actionBarSize"
        android:id="@+id/snack_bar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/personal_info_btn"
                        style="@style/ImageButtonTransparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:text="Personal information"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/colorSecondary"
                        app:icon="@drawable/arrow_drop_up"
                        app:iconGravity="end"
                        app:iconSize="24dp" />


                    <LinearLayout
                        android:id="@+id/expanded_personal_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <include layout="@layout/edit_profile_layout" />

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="8dp"
                            android:text="Date of birth"
                            android:textColor="@color/colorDisabled" />

                        <TextView
                            android:id="@+id/dob_selector"
                            style="@style/TextAppearance.Material3.BodyLarge"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="24dp"
                            android:background="@android:color/transparent"
                            android:hint="01/01/2000" />

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="8dp"
                            android:text="Address"
                            android:textColor="@color/colorDisabled" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addressBtn"
                            style="@style/ImageButtonTransparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="24dp"
                            android:gravity="start"
                            android:text="Pick location"
                            app:icon="@drawable/location"
                            app:iconPadding="24dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/p_info_continue_btn"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="Continue" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/legal_doc_btn"
                        style="@style/ImageButtonTransparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:text="Legal Documents"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/colorSecondary"
                        app:icon="@drawable/arrow_drop_down"
                        app:iconGravity="end"
                        app:iconSize="24dp" />


                    <LinearLayout
                        android:id="@+id/legal_doc_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="8dp"
                            android:text="Driving licence"
                            android:textColor="@color/colorDisabled" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/driving_licence_front"
                            style="@style/ImageButtonTransparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="24dp"
                            android:gravity="start"
                            android:text="Upload front side photo"
                            app:iconPadding="24dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/driving_licence_back"
                            style="@style/ImageButtonTransparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="24dp"
                            android:gravity="start"
                            android:text="Upload back side photo"
                            app:iconPadding="24dp" />

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="8dp"
                            android:text="Aadhar card"
                            android:textColor="@color/colorDisabled" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/aadhar_front"
                            style="@style/ImageButtonTransparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="24dp"
                            android:gravity="start"
                            android:text="Upload front side photo"
                            app:iconPadding="24dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/aadhar_back"
                            style="@style/ImageButtonTransparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="24dp"
                            android:gravity="start"
                            android:text="Upload back side photo"
                            app:iconPadding="24dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/legal_doc_continue_btn"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="Continue" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/vehicle_info_btn"
                        style="@style/ImageButtonTransparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:text="Vehicle Information"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/colorSecondary"
                        app:icon="@drawable/arrow_drop_down"
                        app:iconGravity="end"
                        app:iconSize="24dp" />


                    <LinearLayout
                        android:id="@+id/vehicle_info_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="8dp"
                            android:text="Vehicle Registration Certificate (RC )"
                            android:textColor="@color/colorDisabled" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/rc_photo_btn"
                            style="@style/ImageButtonTransparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="24dp"
                            android:gravity="start"
                            android:text="Upload RC photo"
                            app:iconPadding="24dp" />


                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="8dp"
                            android:text="License Plate Number"
                            android:textColor="@color/colorDisabled" />

                        <EditText
                            android:id="@+id/registration_no"
                            style="@style/TextAppearance.Material3.BodyLarge"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="24dp"
                            android:background="@android:color/transparent"
                            android:hint="DL 30 ZX 9012" />

                        <LinearLayout
                            android:id="@+id/vehicle_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="16dp"
                                android:layout_marginBottom="8dp"
                                android:text="Vehicle Make"
                                android:textColor="@color/colorDisabled" />


                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="16dp"
                                android:layout_marginBottom="8dp"
                                android:text="Vehicle Model"
                                android:textColor="@color/colorDisabled" />

                            <TextView
                                android:id="@+id/vehicle_model"
                                style="@style/TextAppearance.Material3.BodyLarge"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="24dp"
                                android:background="@android:color/transparent"
                                android:hint="Amaze, Innova,S1 pro, etc." />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="16dp"
                                android:layout_marginBottom="8dp"
                                android:text="Vehicle year"
                                android:textColor="@color/colorDisabled" />

                            <TextView
                                android:id="@+id/vehicle_year"
                                style="@style/TextAppearance.Material3.BodyLarge"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="24dp"
                                android:background="@android:color/transparent"
                                android:hint="2018, 2020, etc." />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="16dp"
                                android:layout_marginBottom="8dp"
                                android:text="Vehicle color"
                                android:textColor="@color/colorDisabled" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/vehicle_color"
                                style="@style/ImageButtonTransparent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="24dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="Pick a color"
                                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                                app:icon="@drawable/circle_filled"
                                app:iconSize="24dp" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/v_info_continue_btn"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="Continue" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/consent_btn"
                        style="@style/ImageButtonTransparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:text="Terms and Conditions"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/colorSecondary"
                        app:icon="@drawable/arrow_drop_down"
                        app:iconGravity="end"
                        app:iconSize="24dp" />


                    <LinearLayout
                        android:id="@+id/consent_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="8dp"
                            android:text="Terms and Conditions"
                            android:textColor="@color/colorDisabled" />

                        <TextView
                            style="@style/TextAppearance.Material3.BodyLarge"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="24dp"
                            android:background="@android:color/transparent"
                            android:text="@string/terms_and_conditions" />

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="8dp"
                            android:text="Share GPS Location while Driving"
                            android:textColor="@color/colorDisabled" />

                        <TextView
                            style="@style/TextAppearance.Material3.BodyLarge"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="24dp"
                            android:background="@android:color/transparent"
                            android:text="@string/gps_consent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/agree_continue_btn"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="Agree and continue" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>