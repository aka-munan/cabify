<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ShapeAppearanceOverlay.App.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.RoundedRight" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="elevatedButton" parent="Widget.Material3.Button">
         
        <item name="android:elevation">3dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:textColor">?attr/colorSurface</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Rounded
        </item>
         
    </style>

    <style name="backButton" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="icon">@drawable/arrow_back</item>
        <item name="iconSize">25dp</item>
        <item name="android:layout_marginStart">-2dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="iconTint">@color/colorSecondary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.RoundedRight</item>
    </style>

    <style name="twitterButton" parent="elevatedButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="icon">@drawable/ic_twitter_logo</item>
        <item name="android:backgroundTint">@drawable/twitter_btn_background</item>
        <item name="iconSize">25dp</item>
        <item name="iconTint">@color/colorWhite</item>
    </style>

    <style name="googleButton" parent="elevatedButton">
        <item name="android:textColor">#5C5F61</item>
        <item name="icon">@drawable/ic_google_logo</item>
        <item name="iconSize">25dp</item>
        <item name="android:backgroundTint">@drawable/google_btn_background</item>
        <item name="rippleColor">#C5C7C9</item>
        <item name="iconTint">@null</item>
    </style>
    <style name="Theme.MaterialLogin" parent="Base.Theme.MaterialLogin" />
</resources>